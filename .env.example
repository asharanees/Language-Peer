# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=123456789012

# Bedrock Configuration
BEDROCK_MODELS=claude-3-5-sonnet,llama-3-1,nova-pro
BEDROCK_REGION=us-east-1

# Application Configuration
APP_NAME=LanguagePeer
ENVIRONMENT=development
LOG_LEVEL=info

# API Configuration
API_BASE_URL=https://api.languagepeer.com/v1
WEBSOCKET_URL=wss://ws.languagepeer.com

# Frontend Configuration
REACT_APP_API_URL=https://api.languagepeer.com/v1
REACT_APP_WS_URL=wss://ws.languagepeer.com
REACT_APP_S3_BUCKET=languagepeer-audio-bucket

# Database Configuration
DYNAMODB_TABLE_PREFIX=LanguagePeer
DYNAMODB_REGION=us-east-1

# Voice Processing Configuration
TRANSCRIBE_LANGUAGE_CODES=en-US,es-ES,fr-FR,de-DE,it-IT
POLLY_VOICE_IDS=Joanna,Lucia,Celine,Marlene,Carla

# Analytics Configuration
KINESIS_STREAM_NAME=LanguagePeerAnalytics
CLOUDWATCH_LOG_GROUP=/aws/lambda/language-peer

# Security Configuration
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=https://languagepeer.com,https://demo.languagepeer.com

# Development Configuration (optional)
DEBUG=true
MOCK_AWS_SERVICES=false
LOCAL_DYNAMODB_ENDPOINT=http://localhost:8000