{
  "name": "language-peer",
  "version": "1.0.0",
  "description": "A voice-first GenAI application for language learning with autonomous AI agents",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "deploy": "./scripts/auto-deploy.sh",
    "deploy:auto": "./scripts/auto-deploy.sh",
    "deploy:auto:dev": "./scripts/auto-deploy.sh development",
    "deploy:auto:staging": "./scripts/auto-deploy.sh staging",
    "deploy:auto:prod": "./scripts/auto-deploy.sh production",
    "deploy:force": "./scripts/auto-deploy.sh development true",
    "deploy:force:staging": "./scripts/auto-deploy.sh staging true",
    "deploy:force:prod": "./scripts/auto-deploy.sh production true",
    "deploy:manual": "./scripts/deploy.sh development all",
    "deploy:dev": "./scripts/deploy.sh development all",
    "deploy:staging": "./scripts/deploy.sh staging all",
    "deploy:prod": "./scripts/deploy.sh production all",
    "deploy:core": "./scripts/deploy.sh development core",
    "deploy:voice": "./scripts/deploy.sh development voice",
    "deploy:agents": "./scripts/deploy.sh development agents",
    "deploy:monitoring": "./scripts/deploy.sh development monitoring",
    "deploy:pipeline": "./scripts/deploy.sh staging pipeline",
    "deploy:one-click": "./scripts/one-click-deploy.sh",
    "setup": "./scripts/setup-config.sh",
    "rollback": "./scripts/rollback.sh development all",
    "rollback:staging": "./scripts/rollback.sh staging all",
    "rollback:prod": "./scripts/rollback.sh production all",
    "test": "npm run test:infrastructure && npm run test:backend && npm run test:frontend",
    "test:unit": "npm run test:infrastructure && npm run test:backend && npm run test:frontend",
    "test:infrastructure": "jest --config jest.infrastructure.config.js",
    "test:backend": "cd src/backend && npm test",
    "test:frontend": "cd src/frontend && npm test",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm run dev",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "cdk:bootstrap": "npx cdk bootstrap",
    "cdk:synth": "npx cdk synth",
    "cdk:diff": "npx cdk diff",
    "cdk:destroy": "npx cdk destroy --all"
  },
  "keywords": [
    "genai",
    "hackathon",
    "voice-ui",
    "modular-agents",
    "aws",
    "bedrock",
    "language-learning",
    "ai-agents",
    "strands",
    "transcribe",
    "polly",
    "serverless"
  ],
  "author": "LanguagePeer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/asharanees/language-peer.git"
  },
  "bugs": {
    "url": "https://github.com/asharanees/language-peer/issues"
  },
  "homepage": "https://github.com/asharanees/language-peer#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.100.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "source-map-support": "^0.5.21"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0",
    "@aws-sdk/client-bedrock": "^3.450.0",
    "@aws-sdk/client-bedrock-runtime": "^3.450.0",
    "@aws-sdk/client-transcribe": "^3.450.0",
    "@aws-sdk/client-transcribe-streaming": "^3.450.0",
    "@aws-sdk/client-polly": "^3.450.0",
    "@aws-sdk/client-comprehend": "^3.450.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@aws-sdk/client-kinesis": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
