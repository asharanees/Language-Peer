{
  "name": "language-peer",
  "version": "1.0.0",
  "description": "A voice-first GenAI application for language learning with autonomous AI agents",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "deploy": "npx cdk deploy --all",
    "deploy:dev": "npx cdk deploy --all --profile dev",
    "deploy:prod": "npx cdk deploy --all --profile prod",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src/backend && npm test",
    "test:frontend": "cd src/frontend && npm test",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm run dev",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "cdk:bootstrap": "npx cdk bootstrap",
    "cdk:synth": "npx cdk synth",
    "cdk:diff": "npx cdk diff",
    "cdk:destroy": "npx cdk destroy --all"
  },
  "keywords": [
    "genai",
    "hackathon",
    "voice-ui",
    "modular-agents",
    "aws",
    "bedrock",
    "language-learning",
    "ai-agents",
    "strands",
    "transcribe",
    "polly",
    "serverless"
  ],
  "author": "LanguagePeer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/language-peer.git"
  },
  "bugs": {
    "url": "https://github.com/username/language-peer/issues"
  },
  "homepage": "https://github.com/username/language-peer#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.100.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}